apiVersion: v1
baseDomain: {{ cluster_domain }}
compute: 
- name: worker
  architecture: amd64
  hyperthreading: Enabled
  replicas: {{ nodes | selectattr('name', 'search', '^worker') | list | length }}
controlPlane: 
  name: master
  architecture: amd64
  hyperthreading: Enabled
  replicas: {{ nodes | selectattr('name', 'search', '^master') | list | length }}
metadata:
  name: {{ cluster_name }} 
networking:
  machineNetwork:
  - cidr: {{ cluster_cidr }}
  clusterNetwork:
  - cidr: 10.128.0.0/14 
    hostPrefix: 23 
  networkType: OVNKubernetes 
  serviceNetwork: 
  - 172.30.0.0/16
platform:
  baremetal:
    apiVIPs:
      - {{ api_ip }}
    ingressVIPs:
      - {{ ingress_ip }}
fips: true
pullSecret: '{{ pull_secret }}'
sshKey: "{{ lookup('ansible.builtin.file', ssh_key) }}"
additionalTrustBundle: |
{{ lookup('ansible.builtin.file',  ca_cert_location) | indent(2, true) }}
imageDigestSources:
  - mirrors:
    - {{ registry }}/openshift/release
    source: quay.io/openshift-release-dev/ocp-v4.0-art-dev
  - mirrors:
    - {{ registry }}/openshift/release-images
    source: quay.io/openshift-release-dev/ocp-release